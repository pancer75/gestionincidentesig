<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <title>Gestion Incidentes</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #1991D6;">
        <a class="navbar-brand" href="<%='/tickets'%>">Gestion Incidentes</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="<%='/tickets'%>">Tickets</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="<%='/analysts'%>">Analistas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="<%='/attentions'%>">Atenciones</a>
                </li>
                <% if(usuario.idTipo == 1) {%>
                    <li class="nav-item">
                        <a class="nav-link active" href="<%='/ticketregister'%>">Registrar ticket</a>
                    </li>
                    <% } %>
                <li class="nav-item">
                    <a class="nav-link active" href="<%='/logout'%>">Salir</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <h3></h3>
        <h3>Agregar Ticket</h3>
        <h3></h3>
        <form action="/updateticket" method="POST">
    
            <div class="form-group">
                <label for="desc">id</label>
                <input class="form-control" name="txt_id" readonly="readonly" value="<%= ticket[0].idTicket %>">
            </div>
    
            <div class="form-group">
                <label for="desc">Descripcion</label>
                <textarea class="form-control" id="desc" readonly="readonly" rows="3" name="txt_descripcion"><%= ticket[0].descripcion %></textarea>
            </div>
    
            <div class="form-group">
                <label for="desc">Fecha</label>
                <input class="form-control" name="txt_fecha" readonly="readonly" value="<%= ticket[0].fechaIngreso %>">
            </div>
    
            <div class="form-group">
                <label for="desc">Usuario</label>
                <input class="form-control" name="txt_usuario" readonly="readonly" value="<%= ticket[0].idUsuario %>">
            </div>
    
            <div class="form-group">
                <label for="desc">Caso</label>
                <input class="form-control" name="txt_caso" readonly="readonly" value="<%= ticket[0].idTipoCaso %>">
            </div>
    
    
            <div class="form-group">
                <label for="box1">Estado</label>
                <select class="form-control" id="box1" name="combo_estado">
                    
                        <option value="1">PENDIENTE</option>
                        <option value="2">ASIGNADO</option>
                        <option value="3">ATENDIDO</option>
                        <option value="4">CERRADO</option>
                        <option value="5">CANCELADO</option>
                    
                </select>
            </div>
    
            <div class="form-group">
                <label for="desc">Prioridad</label>
                <input class="form-control" name="txt_fecha" readonly="readonly" value="<%= ticket[0].idPrioridad %>">
            </div>
    
            <button type="submit" class="btn btn-primary">Actualizar</button>
        </form>
    </div>
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </body>
    </html>
    
    
    