<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <title>Gestion Incidentes</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #1991D6;">
        <a class="navbar-brand" href="<%='/tickets'%>">Gestion Incidentes</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="<%='/tickets'%>">Tickets</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="<%='/analysts'%>">Analistas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="<%='/attentions'%>">Atenciones</a>
                </li>
                <% if(usuario.idTipo == 1) {%>
                    <li class="nav-item">
                        <a class="nav-link active" href="<%='/ticketregister'%>">Registrar ticket</a>
                    </li>
                    <% } %>
                <li class="nav-item">
                    <a class="nav-link active" href="<%='/logout'%>">Salir</a>
                </li>
            </ul>
        </div>
    </nav>
    
    <div class="container">
        <div class="row">
            <h3> </h3>
        </div>
        <div class="row">
            <h3>Atenciones</h3>
        </div>
        <div class="row">
            <h3> </h3>
        </div>
        <div class="row">
            <h3> </h3>
        </div>
        <div class="panel-control border col-12">
            <h5>Consulta por fecha de atencion</h5>
            <form class="form-inline" action="/attentions" method="POST">
                <div class="form-group" row>
                    <h3>  </h3>
                </div>
                <div class="form-group row">
                    <label for="desde" class="col-sm-2 col-form-label">Desde: </label>
                    <div class="col-sm-10">
                        <input type="date" class = "form-control" id="desde" name="date_desde">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="hasta" class="col-sm-2 col-form-label">Hasta:</label>
                    <div class="col-sm-10">
                        <input type="date" class = "form-control" id="hasta" name="date_hasta">
                    </div>
                </div>
                <div class="form-group row">
                    <input type="submit" class="btn" value="Consultar" style="background-color: #1991D6">
                </div>
            </form>
        </div>
        <div class="row">
            <h3> </h3>
        </div>
        <div class="row">
            <h3> </h3>
        </div>
        <table class="table border">
            <thead>
                <tr class="" style="background-color: #C1C1C1">
                    <th scope="col">Nro Atencion</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Analista</th>
                    <th scope="col">Ticket Atendido</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<atencion.length; i++) { %> 
                <tr>
                    <td><%= atencion[i].idAtencion %></td>
                    <td><%= atencion[i].fechaAtencion %></td>
                    <td><%= atencion[i].analista %></td>
                    <td><%= atencion[i].id_ticket %>, <%= atencion[i].descripcion %></td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>


